{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Targets configuration",
  "type": "object",
  "required": ["schema_version", "targets"],
  "properties": {
    "schema_version": { "type": "string", "enum": ["0.9"] },
    "updated_utc": { "type": "string" },
    "companion_files": {
      "type": "object",
      "properties": {
        "license_map": {
          "anyOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "field_schemas": {
          "anyOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "denylist": {
          "anyOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        }
      },
      "additionalProperties": true
    },
    "globals": {
      "type": "object",
      "properties": {
        "pitch_limits": {
          "type": "object",
          "properties": {
            "sample_limit": { "type": "integer", "minimum": 0 },
            "text_limit": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": true
        },
        "retry": {
          "type": "object",
          "properties": {
            "max": { "type": "integer", "minimum": 0 },
            "backoff": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": true
        },
        "sharding": {
          "type": "object",
          "properties": {
            "max_records_per_shard": { "type": "integer", "minimum": 1 },
            "compression": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "queues": { "type": "object" },
    "gates_catalog": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "resolvers": { "type": "object" },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string" },
          "enabled": { "type": "boolean" },
          "priority": { "type": "number" },
          "license_profile": { "type": "string" },
          "license_evidence": {
            "type": "object",
            "properties": {
              "spdx_hint": { "type": "string" },
              "url": { "type": "string" }
            },
            "additionalProperties": true
          },
          "download": {
            "type": "object",
            "properties": {
              "strategy": {
                "type": "string",
                "enum": [
                  "none",
                  "http",
                  "ftp",
                  "git",
                  "zenodo",
                  "dataverse",
                  "figshare",
                  "github_release",
                  "huggingface_datasets",
                  "s3_public",
                  "s3_sync",
                  "aws_requester_pays",
                  "torrent",
                  "api",
                  "api_tabular",
                  "web_crawl",
                  "faa_ac_crawl",
                  "noaa_ir_json",
                  "ntrs_openapi",
                  "pmc_oa",
                  "usgs_pubs_warehouse"
                ]
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
