{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Targets configuration",
  "type": "object",
  "required": ["schema_version", "targets"],
  "properties": {
    "schema_version": { "type": "string" },
    "updated_utc": { "type": "string" },
    "companion_files": {
      "type": "object",
      "properties": {
        "license_map": { "type": "string" },
        "field_schemas": { "type": "string" },
        "denylist": { "type": "string" }
      },
      "additionalProperties": true
    },
    "globals": {
      "type": "object",
      "properties": {
        "pitch_limits": {
          "type": "object",
          "properties": {
            "sample_limit": { "type": "integer", "minimum": 0 },
            "text_limit": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": true
        },
        "retry": {
          "type": "object",
          "properties": {
            "max": { "type": "integer", "minimum": 0 },
            "backoff": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": true
        },
        "sharding": {
          "type": "object",
          "properties": {
            "max_records_per_shard": { "type": "integer", "minimum": 1 },
            "compression": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "queues": { "type": "object" },
    "gates_catalog": { "type": "object" },
    "resolvers": { "type": "object" },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string" },
          "enabled": { "type": "boolean" },
          "priority": { "type": "number" },
          "license_profile": { "type": "string" },
          "license_evidence": {
            "type": "object",
            "properties": {
              "spdx_hint": { "type": "string" },
              "url": { "type": "string" }
            },
            "additionalProperties": true
          },
          "download": {
            "type": "object",
            "properties": {
              "strategy": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
