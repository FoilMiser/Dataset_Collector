{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Denylist configuration",
  "type": "object",
  "required": ["schema_version"],
  "properties": {
    "schema_version": { "type": "string", "enum": ["0.9"] },
    "updated_utc": { "type": "string" },
    "domain_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "domain": { "type": "string" },
          "severity": { "type": "string" },
          "link": { "type": "string" },
          "rationale": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "publisher_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "publisher": { "type": "string" },
          "severity": { "type": "string" },
          "link": { "type": "string" },
          "rationale": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "value": { "type": "string" },
          "fields": { "type": "array", "items": { "type": "string" } },
          "severity": { "type": "string" },
          "link": { "type": "string" },
          "rationale": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
